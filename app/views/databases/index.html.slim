h1 Listing databases

table.ui.table
  thead
    tr
      th Name
      th Description
      th
      th
      th

  tbody
    - @databases.each do |database|
      tr
        td = database.name
        td = database.description
        td
          ul
          - database.hosts.each do |host|
            li
              = link_to "#{host.hostname}", hosts_path(host)
        td = link_to 'Show', database
        td = link_to 'Edit', edit_database_path(database)
        td = link_to 'Destroy', database, data: { confirm: 'Are you sure?' }, method: :delete

br

nav.ui.menu
  a.item = "Home"

main.ui.page.grid
  .row
    .column
= link_to 'New Database', new_database_path
